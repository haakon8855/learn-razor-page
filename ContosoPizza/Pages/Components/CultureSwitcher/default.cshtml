    <script>
        let dropdown = document.getElementById("culture-options");
        dropdown.addEventListener("change", () => {
            document.getElementById("culture-switcher").submit();
            // set cookie
            document.cookie = `PreferredLanguage=${dropdown.value};path=/;max-age=31536000`;
        });
    </script>
