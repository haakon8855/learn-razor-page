@model CultureSwitcherModel

<div>
    <form id="culture-switcher">
        <select name="culture" id="culture-options" class="form-control">
            @if (Model.SupportedCultures!=null){
                @foreach (var culture in Model.SupportedCultures)
                {
                    <option value="@culture.Name" selected="@(CultureInfo.CurrentUICulture.Name == culture.Name)">@(culture.DisplayName.Substring(0, 1).ToUpper() + culture.DisplayName.Substring(1))</option>
                }
            }
        </select>
    </form>
